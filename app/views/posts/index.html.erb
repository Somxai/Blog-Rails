<p style="color: green"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      
      <th>Author</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= link_to "Show", post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>